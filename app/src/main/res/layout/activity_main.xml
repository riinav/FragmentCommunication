<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BBFF"
    tools:context="com.aquaJax.fragmentcommunication.app.MainActivity">


    <fragment
        android:id="@+id/fragment_a"
        android:tag="fragment_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.aquaJax.fragmentcommunication.app.FragmentA"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <fragment
        android:id="@+id/fragment_b"
        android:tag="fragment_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.aquaJax.fragmentcommunication.app.FragmentB"
        android:layout_below="@+id/fragment_a"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
